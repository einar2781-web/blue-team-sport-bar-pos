{
  "name": "restaurant-pos-server",
  "version": "1.0.0",
  "description": "Backend API server for Restaurant POS Cloud system",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest --watchAll --no-coverage",
    "test:ci": "jest --ci --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "db:migrate": "knex migrate:latest",
    "db:rollback": "knex migrate:rollback",
    "db:seed": "knex seed:run",
    "db:create": "createdb restaurant_pos || echo 'Database already exists'",
    "db:drop": "dropdb restaurant_pos || echo 'Database does not exist'",
    "db:reset": "npm run db:drop && npm run db:create && npm run db:migrate && npm run db:seed"
  },
  "keywords": [
    "restaurant",
    "pos",
    "api",
    "node",
    "express",
    "typescript"
  ],
  "author": "Restaurant POS Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "uuid": "^9.0.0",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.32.4",
    "pg": "^8.11.3",
    "knex": "^2.5.1",
    "socket.io": "^4.7.2",
    "redis": "^4.6.7",
    "stripe": "^12.16.0",
    "nodemailer": "^6.9.4",
    "twilio": "^4.15.0",
    "qrcode": "^1.5.3",
    "pdfkit": "^0.13.0",
    "csv-parser": "^3.0.0",
    "csv-writer": "^1.6.0",
    "moment-timezone": "^0.5.43",
    "winston": "^3.10.0",
    "dotenv": "^16.3.1",
    "joi": "^17.9.2",
    "speakeasy": "^2.0.0",
    "bull": "^4.11.3",
    "node-cron": "^3.0.2",
    "swagger-ui-express": "^5.0.0",
    "swagger-jsdoc": "^6.2.8"
  },
  "devDependencies": {
    "@types/node": "^20.5.0",
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/compression": "^1.7.2",
    "@types/bcryptjs": "^2.4.2",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/uuid": "^9.0.2",
    "@types/multer": "^1.4.7",
    "@types/pg": "^8.10.2",
    "@types/nodemailer": "^6.4.9",
    "@types/qrcode": "^1.5.1",
    "@types/node-cron": "^3.0.8",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/jest": "^29.5.4",
    "@types/supertest": "^2.0.12",
    "typescript": "^5.1.6",
    "ts-node": "^10.9.1",
    "nodemon": "^3.0.1",
    "jest": "^29.6.2",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3"
  }
}