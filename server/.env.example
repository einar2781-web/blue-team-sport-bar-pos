# Blue Team Sport Bar POS - Server Environment Variables
# Copy this file to .env and configure your values

# Application Configuration
NODE_ENV=development
PORT=8000
HOST=localhost
APP_NAME="Blue Team Sport Bar POS API"
APP_VERSION=1.0.0

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/blue_team_pos
DB_HOST=localhost
DB_PORT=5432
DB_NAME=blue_team_pos
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_TIMEOUT=30000

# Redis Configuration (for sessions and caching)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_SECRET=your_super_secret_refresh_token_key_here
REFRESH_TOKEN_EXPIRES_IN=7d

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=your_super_secret_session_key_here
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp
ALLOWED_FILE_TYPES=application/pdf,text/csv

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
FROM_EMAIL="Blue Team Sport Bar" <noreply@blueteam.com>

# SMS Configuration (for notifications)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Payment Gateway Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret

# External APIs
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
CURRENCY_API_KEY=your_currency_exchange_api_key

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Monitoring & Analytics
SENTRY_DSN=your_sentry_dsn_here
NEW_RELIC_LICENSE_KEY=your_new_relic_key

# Feature Flags
ENABLE_SWAGGER_DOCS=true
ENABLE_REAL_TIME_UPDATES=true
ENABLE_ANALYTICS=false
ENABLE_NOTIFICATIONS=true
ENABLE_BACKGROUND_JOBS=true

# Background Jobs Configuration
BULL_REDIS_URL=redis://localhost:6379
QUEUE_NAME=blue_team_pos_jobs

# Development Settings
ENABLE_DEBUG_LOGS=true
ENABLE_SQL_LOGGING=false
ENABLE_MOCK_PAYMENTS=true