# Blue Team Sport Bar POS - Client Environment Variables
# Copy this file to .env and configure your values

# API Configuration
VITE_API_URL=http://localhost:8000/api
VITE_API_VERSION=v1

# Socket.IO Configuration
VITE_SOCKET_URL=http://localhost:8000

# App Configuration
VITE_APP_NAME="Blue Team Sport Bar POS"
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION="Sistema POS para Blue Team Sport Bar"

# PWA Configuration
VITE_PWA_NAME="Blue Team POS"
VITE_PWA_SHORT_NAME="BluePOS"
VITE_PWA_THEME_COLOR="#1e3a8a"
VITE_PWA_BACKGROUND_COLOR="#ffffff"

# Environment
NODE_ENV=development

# PWA Configuration
VITE_PWA_ENABLED=true
VITE_PWA_AUTO_UPDATE=true

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_DEBUG_TOOLS=true

# Upload Configuration
VITE_MAX_FILE_SIZE=5242880  # 5MB in bytes
VITE_ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp

# Pagination
VITE_DEFAULT_PAGE_SIZE=20
VITE_MAX_PAGE_SIZE=100

# Currency Configuration
VITE_DEFAULT_CURRENCY=MXN
VITE_CURRENCY_SYMBOL=$

# Date/Time Configuration
VITE_DEFAULT_TIMEZONE=America/Mexico_City
VITE_DATE_FORMAT=DD/MM/YYYY
VITE_TIME_FORMAT=HH:mm

# Map Configuration (for delivery)
VITE_GOOGLE_MAPS_API_KEY=
VITE_MAPBOX_ACCESS_TOKEN=

# Payment Gateway Configuration (for production)
VITE_STRIPE_PUBLIC_KEY=
VITE_PAYPAL_CLIENT_ID=

# Third-party Integrations
VITE_SENTRY_DSN=
VITE_GOOGLE_ANALYTICS_ID=

# Development Tools
VITE_REACT_DEVTOOLS=true
VITE_REDUX_DEVTOOLS=true